<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/toolbar_shadow"/>

    <devlight.io.library.ntb.NavigationTabBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item_default"
        android:layout_gravity="bottom"
        app:ntb_active_color="@color/black"
        app:ntb_animation_duration="0"
        app:ntb_bg_color="@color/white"
        app:ntb_icon_size_fraction="0.4"
        app:ntb_inactive_color="@color/grey"
        app:ntb_scaled="true"
        app:ntb_swiped="true"
        app:ntb_tinted="true"
        app:ntb_title_mode="all"
        app:ntb_title_size="10sp"
        app:ntb_titled="true"/>
</LinearLayout>