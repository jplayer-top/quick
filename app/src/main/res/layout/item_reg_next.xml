<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llNextBtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/item_show_register"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:layout_width="75dp"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:background="@color/grey"/>

        <TextView
            android:id="@+id/tvSetType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="验证手机号码"
            android:textColor="@color/grey"
            android:textSize="15sp"/>

        <View
            android:layout_width="75dp"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:background="@color/grey"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llWxBindIssue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:visibility="visible">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_warning_outline_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="关联手机号码，享受更多的服务"
            android:textColor="@color/white"
            android:textSize="10sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/register_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入您的手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#b3ffffff"
            android:textColorHint="#b3ffffff"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/rtn_code"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@color/color999"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="10sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入您的验证码"
            android:inputType="numberDecimal"
            android:textColor="#b3ffffff"
            android:textColorHint="#b3ffffff"
            android:textSize="15sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_register1"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:width="0dp"
            android:background="@color/colorPrimaryDark"
            android:text="下一步"
            android:textColor="@color/white"/>

        <LinearLayout
            android:id="@+id/llAgreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvBackBefore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册即视为同意"
                android:textColor="@color/color999"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvBackBefore1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户服务协议》"
                android:textColor="@color/white"
                android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>